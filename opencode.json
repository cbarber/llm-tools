{
  "$schema": "https://opncd.ai/config.json",
  "share": "disabled",
  "plugin": [
    "opencode-beads@0.3.0",
    "./.opencode/plugin/temper"
  ],
  "hooks": {
    "pre-commit": "bash tools/check-shell-scripts.sh --staged"
  },
  "mcp": {
    "lsp": {
      "type": "local",
      "command": [
        "cclsp"
      ],
      "enabled": true,
      "environment": {
        "CCLSP_CONFIG_PATH": "cclsp.json"
      }
    }
  }
}
